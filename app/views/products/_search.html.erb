<% if flash[:search] %>
    <p id="search_alert"><%= flahs[:search] %></p>
<% end %>
<%= form_tag(products_search_path, method: :get) do %>

    <div class="field">
      <%= label_tag :name, "Name: " %>
      <%= text_field_tag :name, nil, size: 40 %>
    </div>

    <div class="field">
      <%= label_tag :description, "Description: " %>
      <%= text_area_tag :description, nil, rows: 3, cols: 40 %>
    </div>

    <div class="field">
      <%= label_tag(:price1, "Price: ") %>
      <%= text_field_tag :price1 %>~<%= text_field_tag :price2 %>dollars
    </div>

    <div class="actions">
      <%= submit_tag("Search") %>
    </div>
<% end %>
